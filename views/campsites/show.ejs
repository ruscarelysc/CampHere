<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3" >
      <img src="<%= campsite.image %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= campsite.title %></h5>
        <p class="card-text"><%= campsite.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campsite.location %></li>
        <li class="list-group-item">Price: <%= campsite.price %> $ /night</li>
      </ul>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/campsites/<%=campsite._id%>/edit">Edit</a>
        <form class="d-inline" action="/campsites/<%=campsite._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>


  </div>
  <div class="col-6">
    <h2>Leave a Review</h2>
    <form action="/campsites/<%= campsite._id %>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label" for="reting">Rating:</label>
        <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review:</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>

    <% for (let review of campsite.reviews) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"> Rating: <%= review.rating %></h5>
          <p class="card-text"> Review: <%= review.body %></p>
          <form action="/campsites/<%= campsite._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        </div>
    <% } %>
      </div>
  </div>
</div>
