<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campsite</h1>

<div class="col-6 offset-3">
  <form action="/campsites/<%= campsite._id%>?_method=PUT" method="POST" novalidate class="needs-validation">

    <div class="mb-3">
      <label class="form-label" for="title">Title</label>
      <input class="form-control" type="text" name="campsite[title]" id="title" required value="<%= campsite.title %>">
    </div>

    <div class="mb-3">
      <label class="form-label" for="image">Location</label>
      <input class="form-control" type="text" name="campsite[location]" id="location" required value="<%= campsite.location %>" >
    </div>

    <div class="mb-3">
      <label class="form-label" for="image">Img URL</label>
      <input class="form-control" type="text" name="campsite[image]" id="image" required value="<%= campsite.image %>">
    </div>

    <div class="mb-3">
      <label class="form-label" for="price">Campsite Price</label>
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input type="text" class="form-control" placeholder="0.00" id="price" aria-describedby="price-label"
          name="campsite[price]" required value="<%= campsite.price %>">
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label" for="description">Description</label>
      <textarea class="form-control" type="text" id="description" name="campsite[description]"required><%= campsite.description %></textarea>
    </div>

    <div class="mb-3">
      <button class="btn btn-info">Update campsites</button>
    </div>

  </form>
  <a href="/campsites/<%= campsite._id%>">Back to Campsite</a>
</div>
</div>
